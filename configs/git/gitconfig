[credential]
  helper = cache --timeout=3600

[push]
  default = current

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[core]
  editor = v

[alias]
  a = "!git ls-files -m -o --exclude-standard | fzf --print0 -m | xargs -0 -t -o git add"
  d = difftool

;[init]
;  templatedir = ~/Config/git/gittemplate

[pull]
  rebase = false

[diff]
    tool = meld
    ;tool = vimdiff

[difftool]
    prompt = false

[difftool "meld"]
    cmd = /mnt/c/Program\\ Files/Meld/Meld.exe "$LOCAL" "$REMOTE"

